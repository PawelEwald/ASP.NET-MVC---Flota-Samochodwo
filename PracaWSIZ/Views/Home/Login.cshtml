@model PracaWSIZ.Models.Uzytkownik

@{
    ViewBag.Title = "Login";
}




@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{


    @Html.AntiForgeryToken()

    <br />
    <div class="jumbotron">

        <div class="row">
            <div class="col-lg-12">
                <h1>Login</h1>
                <p class="lead">Podaj nazwę użytkonika i hasło.</p>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 ">
                @Html.TextBoxFor(a => a.uzytkownik1, new { @class = "form-control ", @placeholder = "Nazwa Użytkowanika" })
            </div>
        </div>
        
        <div class="row small"> &nbsp;</div>

        <div class="row">
            <div class="col-sm-6 ">
                @Html.PasswordFor(a => a.haslo, new { @class = "form-control", @placeholder = "Podaj Hasło" })

            </div>
        </div>

        <div class="row small"> &nbsp;</div>

        <div class="row">
            <div class="col-sm-6 ">
                <input type="submit" value="Logowanie" class="btn btn-success" />
            </div>
        </div>





    </div>

}  